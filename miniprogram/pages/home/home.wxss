.movie{
  display: flex;
  padding: 20rpx;
  border-bottom:1px solid #ccc;
}
.movie-image{
  width:200rpx;
  height:300rpx;
  margin-right:20rpx; 
}
.movie-info{
  flex:1;
  font-size: 28rpx;
  line-height:1.8
}
.movie-title{
  font-size:40rpx;
  color:#666;
}
.movie-score{
